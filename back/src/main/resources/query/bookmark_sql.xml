<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="sql.bookmark">
	<select id="selectByUser" parameterType="java.util.HashMap" resultType="bookmark">
		select * 
		  from bookmark
		 where user = #{user}
		   and type = #{type}
	</select>

	<select id="selectById" parameterType="integer" resultType="integer">
		select store
		from bookmarkstore
		where bookmark = #{bookmark}
	</select>
	
	<insert id="insertIntoBookmark" parameterType="bookmark" useGeneratedKeys="true" keyProperty="id">
		insert into bookmark(user, name, type)
		values(#{user}, #{name}, #{type})
	</insert>

	<update id="update" parameterType="bookmark">
		update bookmark 
		   set name = #{name},
		       type = #{type}
		 where id = #{id}
	</update>

	<insert id="insertIntoBookmarkStore" parameterType="java.util.HashMap">
		insert into bookmarkstore(bookmark, store)
		values(#{bookmark}, #{store})
	</insert>
	
	<delete id="deleteFromBookmarkStore" parameterType="integer">
		delete from bookmarkstore
		 where bookmark = #{bookmark} 
	</delete>
	
	<delete id="deleteFromBookmark" parameterType="integer">
		delete from bookmark
		 where id = #{id}
	</delete>
</mapper>